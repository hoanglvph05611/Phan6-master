<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

  <Button
      android:id="@+id/btnDemoSQLite"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="btnDemoSQLite"
      android:text="Demo SQLite"
      android:textAllCaps="false" />
  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAllCaps="false"
      android:text="Demo Provider"
      android:id="@+id/btnDemoProvider"
      android:onClick="btnDemoProvider"/>
  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="DemoSharedPreference"
      android:textAllCaps="false"
      android:id="@+id/btnSharedPreference"
      android:onClick="btnSharedPreference"/>
  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="ExternalStorage"
      android:textAllCaps="false"
      android:id="@+id/btnExternalStorage"
      android:onClick="btnExternalStorage"/>

</LinearLayout>